        -->
        <!-- FATAL, ERROR, WARN, INFO, DEBUG, TRACE -->

        <!-- FATAL, ERROR, WARN, INFO, DEBUG, TRACE -->
        <Root level="INFO" >
            <AppenderRef ref="asyncFileAppender"/>
            <AppenderRef ref="consoleAppender" />
        </Root>
    </Loggers>
    <!-- filter추가  -->
    <Filters>
        <!-- log 제외문자 text속성에 입력  -->
        <StringMatchFilter text="==IGNORE_LOG=="  onMatch="DENY" onMismatch="NEUTRAL" />
        <!-- log 패턴제외 regex속성에 설정된 단어가 포함되는 모든 문자를 0 회 이상.* 의미 -->
        <RegexFilter regex=".*hikari.*"  onMatch="DENY" onMismatch="NEUTRAL"/>
    </Filters>
</Configuration>